{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "@trpc/server": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@my-sso/api": "workspace:*",
    "@my-sso/auth": "workspace:*",
    "@my-sso/db": "workspace:*"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "@types/express": "catalog:",
    "@types/cors": "^2.8.17",
    "@types/bun": "^1.2.6",
    "tsdown": "catalog:"
  }
}
