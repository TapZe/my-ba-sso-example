{
	"name": "@my-sso/auth",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./src/*.ts"
		}
	},
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"auth:generate": "bunx @better-auth/cli generate --config ./src/index.ts --yes"
	},
	"devDependencies": {
		"@types/nodemailer": "^7.0.3",
		"tsdown": "catalog:"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@my-sso/db": "workspace:*",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"jose": "catalog:",
		"nodemailer": "^7.0.10",
		"zod": "catalog:"
	}
}
