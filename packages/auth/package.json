{
  "name": "@my-sso/auth",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "auth:generate": "bunx @better-auth/cli generate --config ./src/index.ts --yes"
  },
  "devDependencies": {
    "tsdown": "catalog:"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@my-sso/db": "workspace:*"
  }
}
